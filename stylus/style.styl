/* - - - RESET - - - */
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary, time, mark, audio, video
  border: 0
  margin: 0
  padding: 0

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section
  display: block

body
  line-height: 1

ol, ul
  list-style: none

blockquote, q
  quotes: none

blockquote:before, blockquote:after, q:before, q:after
  content: none

table
  border-collapse: collapse
  border-spacing: 0


/* - - - VARIABLES - - - */
$black = #0C161C
$dark = #2B3A42
$light = #EFEFEF
$accent1 = #E74C3C

// MEDIA QUERIES
small = "all and (max-width: 400px)"
mediumDown = "all and (max-width: 700px)"
mediumUp = "all and (min-width: 701px)"

/* - - - GENERAL STYLES - - - */
html
  font-size: 10px
  @media small
    font-size: 8px

body
  font-family: 'Oxygen', Helvetica, sans-serif
  background: $light
  color: $black
  font-size: 1.6rem

nav, section > div, footer > div
  padding: 1rem 0
  max-width: 1024px
  margin: 0 auto
  box-sizing: border-box

h1
  font-size: 2.4rem
  margin-bottom: 3rem
  color: $accent1

h2
  font-size: 2rem
  margin-bottom: 1rem

a
  color: $light
  transition: all .2s

  &:hover
    color: $accent1


/* - - - HEADER STYLES - - - */
header
  background: $dark
  border-bottom: 2px solid $light
  font-size: 1.6rem
  position: fixed
  width: 100%
  left: 0
  top: 0
  z-index: 1

nav a
  padding: .5rem 1rem
  display: inline-block
  text-decoration: none
  font-weight: 400
  color: #fff
  border-right: 1px solid $light
  cursor: pointer

  &:last-child
    border: none

  &:hover
    color: $accent1

header .logo
  float: right
  font-family: 'Oxygen', Arial, sans-serif
  font-size: 2.4rem
  margin: 0px 10px
  font-weight: 700
  border: none
  padding: 0

  &:hover
    color: #fff


/* - - - SECTION STYLES - - - */
section
  background: white
  font-size: 2rem
  padding: 0 1rem

section > div
  padding: 9rem 2rem 4rem
  position: relative

section p
  margin-bottom: 2rem
  line-height: normal


/* - - - SPLASH SECTION - - - */
.splash
  padding: 10rem 0 5rem
  margin-top: 2rem
  font-weight: 300
  text-align: center
  background: $dark
  color: $light
  background-size: cover
  background-repeat: no-repeat
  background-image: url('../img/background@1x.png')
  background-position: center

  @media mediumUp
    text-align: right
    background-repeat-x: initial
    background-size: initial

  @media small
    background-image: url('../img/background.png')
    background-position: center
    background-repeat: no-repeat

  & > div
    padding: 3rem
  

  p
    font-size: 2.4rem

    @media mediumUp
      padding-left: 20%


  .hello
    font-size: 4rem
    margin-bottom: 1rem
    font-weight: 900
    padding: 0


/* - - - LINKS SECTION - - - */
.small-links
  background: rgba($dark, .7)
  border-top: 1px solid #666
  border-bottom: 1px solid $black
  text-align: right
  font-size: 1.7rem
  height: 2em
  margin-top: -2em

.small-links > div
  padding: .5em 2rem

.small-links a
  text-decoration: none

  @media mediumDown
    text-align: center
    display: inline-block
    width: 25%

    .text
      display: none

  @media mediumUp
    margin-left: 2rem


// RESUME BUTTONS
.big-links
  text-align: center

.big-links a
  font-size: 3rem
  border: 1px solid $accent1
  box-sizing: border-box
  color: $accent1
  display: inline-block
  width: 49%
  padding: 2rem 0
  text-decoration: none
  transition: all .2s ease-in
  &:hover
    color: white
    background: $accent1

  @media mediumDown
    width: 100%

    &:first-of-type
      margin-bottom: 1rem

  @media mediumUp
    &:first-of-type
      margin-right: 2%


.big-links i
  font-size: 3.5rem
  margin-right: 1rem


/* - - - CONTENT SECTIONS - - - */
.about
  background: $light
  color: $black

.about > div
  padding-top: 5rem
  padding-bottom: 5rem

.development
  background: $light

.resume > div
  padding-top: 3rem
  padding-bottom: 3rem


// SECTION ARROWS
.development, .user-experience
  & > div:after
    top: 0%
    left: 4.5rem
    border: solid transparent
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    border-color: rgba(white, 0)
    border-top-color: white
    border-width: 30px
    margin-left: -30px


// UI/UX OVERRIDE
.user-experience > div:after
  border-top-color: $light


// SECTION ICONS
.development, .user-experience
  i
    color: $accent1
    border: 1px solid $accent1
    width: 5rem
    padding: 1.2rem 0
    text-align: center
    position: absolute
    font-size: 2.5rem
    font-style: normal

  // JS Icon
  .fa-javascript
    font-weight: bold


  // SECTION CONTENT
  p, h2
    margin-left: 8rem

  p
    margin-bottom: 4rem


/* - - - FOOTER STYLES - - - */
footer
  background: $dark
  color: $light
  text-align: right
  font-size: 1.8rem
  padding: 0 1rem

  a
    text-decoration: none

footer .links
  float: left

  a
    margin-right: 1rem

